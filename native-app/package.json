{
  "name": "nokta",
  "version": "1.0.2",
  "description": "Desktop chat client for Nokta",
  "author": "Vlad",
  "main": "electron/main.js",
  "scripts": {
    "dev": "electron .",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:linux": "electron-builder --linux"
  },
  "devDependencies": {
    "electron": "^33",
    "electron-builder": "^25"
  },
  "dependencies": {},
  "build": {
    "appId": "com.nokta.app",
    "productName": "Nokta",
    "directories": {
      "output": "dist"
    },
    "files": [
      "electron/**/*",
      "assets/**/*"
    ],
    "electronLanguages": [
      "en"
    ],
    "mac": {
      "icon": "assets/icon.icns",
      "category": "public.app-category.social-networking",
      "entitlements": "entitlements.mac.plist",
      "extendInfo": {
        "NSCameraUsageDescription": "Nokta needs camera access for video calls",
        "NSMicrophoneUsageDescription": "Nokta needs microphone access for voice and video calls"
      }
    },
    "win": {
      "icon": "assets/icon.png"
    },
    "linux": {
      "icon": "assets/icon.png",
      "category": "Network"
    }
  }
}