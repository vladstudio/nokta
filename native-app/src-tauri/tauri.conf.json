{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Nokta",
  "identifier": "studio.vlad.nokta",
  "version": "1.0.0",
  "build": {
    "frontendDist": "../src"
  },
  "app": {
    "withGlobalTauri": true,
    "trayIcon": { "iconPath": "icons/icon.png", "iconAsTemplate": true },
    "windows": [{ "title": "Nokta", "width": 1200, "height": 800, "minWidth": 400, "minHeight": 300, "focus": true, "acceptFirstMouse": true }],
    "security": { "csp": null }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.icns", "icons/icon.png"]
  },
  "plugins": {}
}
