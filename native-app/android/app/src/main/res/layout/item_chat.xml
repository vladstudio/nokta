<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container" android:layout_width="match_parent" android:layout_height="wrap_content"
    android:orientation="horizontal" android:padding="12dp" android:gravity="center_vertical"
    android:layout_marginBottom="4dp" android:background="@drawable/item_chat_bg">
    <FrameLayout android:layout_width="44dp" android:layout_height="44dp">
        <TextView android:id="@+id/avatar" android:layout_width="44dp" android:layout_height="44dp"
            android:gravity="center" android:textSize="18sp" android:textColor="#ffffff"
            android:background="@drawable/avatar_bg" />
    </FrameLayout>
    <TextView android:id="@+id/name" android:layout_width="0dp" android:layout_height="wrap_content"
        android:layout_weight="1" android:layout_marginStart="12dp" android:textSize="15sp"
        android:textColor="@color/text" android:singleLine="true" android:ellipsize="end" />
    <ImageView android:id="@+id/checkmark" android:layout_width="22dp" android:layout_height="22dp"
        android:src="@drawable/checkmark" android:visibility="gone" />
</LinearLayout>
